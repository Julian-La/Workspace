import java.io.FileWriter;
import java.io.IOException;
import java.util.ArrayList;
import java.util.Collections;
import java.util.Scanner;

public class Lists_Program {

	public static void main(String[] args) throws IOException {
		
		//Arrays have a fix amount of space. Here it's 10. If we wanna go for more students...   
		String[] students = new String[3];
		students[0] = "Max";
		students[1] = "Tom";
		students[2] = "Diana";
		
		for(int i = 0;i<students.length;i++) {
			System.out.println(students[i]);

		}
		System.out.println("---------------");
		// we build a new array and set the first array equal the new array:
		String[] students2 = new String[8];
		students[0] = "Maxim";
		students[1] = "Maxo";
		students[2] = "Rim";
		students[3] = "Jenx";
		students[4] = "Troi";
		for(int i = 0; i<students.length;i++) {
			students2[i] = students[i];
			System.out.println(students[i]);
		}
		students = students2;
		/**
		 * Not the best idea. You can easily fail at execution and you still got the same problem later on. 
		 * To handle this situation we use generics:
		 */
		System.out.println("---------------");
		ArrayList<String> studentList = new ArrayList<>();
		studentList.add("Max");
		studentList.add("Tom"); 
		studentList.add("Richard");
		studentList.add("Kerstin");
		studentList.remove("Kerstin");
		
		Collections.sort(studentList);
		
		for(String student:studentList) {
		System.out.println(student);
	}
//		FileWriter writer = null;
//		try {
//			writer = new FileWriter("MyFile.txt", true);
//		} catch (IOException e) {
//			 e.printStackTrace();
//		}
		Scanner scan = new Scanner(System.in);
		while(scan.hasNext()) {
			String s = scan.next();
			studentList.add(s);
			System.out.println("Du hast "+s+" angelegt. Derzeit befinden sich "+studentList.size()+" Studenten auf der Liste.");
//			
//	            try {
//					writer.write(s);
//		            writer.write("\r\n");   // write new line
//
//				} catch (IOException e) {
//					// TODO Auto-generated catch block
//					e.printStackTrace();
//				}
			
			/**
			 * I can't write somthing in MyFile.
			 */
	           
	    }
}		
}

